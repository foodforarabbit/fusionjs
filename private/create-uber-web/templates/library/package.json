{
  "name": "@uber/{{project}}",
  "description": "{{description}}",
  "scaffold-version": "{{version}}",
  "author": "{{author}} <{{email}}>",
  "repository": {
    "type": "git",
    "url": "gitolite@code.uber.internal:{{team}}/{{name}}.git"
  },
  "bugs": {
    "url": "https://code.uberinternal.com/maniphest/task/create/",
    "email": "{{email}}"
  },
  "license": "UNLICENSED",
  "files": [
    "dist",
    "src",
    "!__tests__"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "bootstrap": "rm -rf node_modules && yarn",
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "flow": "flow check",
    "test": "BABEL_ENV=test jest",
    "lint": "eslint src",
    "prepublish": "yarn build",
    "cover": "yarn lint && yarn flow && yarn test",
    "prettier": "prettier --write '**/*js'"
  },
  "dependencies": {
    "global": "^4.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-transform-block-scoping": "^7.0.0-beta.54",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-flow": "^7.0.0-beta.54",
    "@babel/preset-react": "^7.0.0-beta.54",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-uber-es2015": "^3.1.2",
    "eslint-config-uber-jsx": "^3.3.3",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flow-header": "^0.2.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.76.0",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "rollup": "^0.63.0",
    "rollup-plugin-babel": "^4.0.0-beta.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-size-snapshot": "^0.6.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "modules": false
        }
      ],
      "@babel/preset-react",
      "@babel/preset-flow"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-block-scoping",
        {
          "throwIfClosureRequired": true
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "jest": {
    "browser": false,
    "collectCoverage": true,
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/type.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "cobertura",
      "html",
      "json",
      "text-summary",
      "text"
    ],
    "testMatch": [
      "**/src/**/__tests__/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "plugins": [
      "flowtype",
      "prettier",
      "babel",
      "jest",
      "import",
      "flow-header"
    ],
    "extends": [
      "eslint-config-uber-es2015",
      "eslint-config-uber-jsx",
      "plugin:flowtype/recommended",
      "prettier",
      "prettier/flowtype"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "import/first": "error",
      "import/no-duplicates": "error",
      "import/order": "error",
      "import/newline-after-import": "error",
      "react/jsx-wrap-multilines": "off",
      "react/jsx-indent": "off",
      "func-style": "off",
      "flow-header/flow-header": 2
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true
  },
  "engines": {
    "node": "{{nodeVersion}}",
    "npm": "{{npmVersion}}",
    "yarn": "{{yarnVersion}}"
  },
  "private": true
}
